<odoo>
	<data>
		<template id="assets_frontend" name="rlm_x1 assets" inherit_id="web.assets_frontend">
			<xpath expr="." position="inside">
				<link rel="stylesheet" href="/rlm_x1/static/src/less/rlm_x1.less"/>
				<link rel="stylesheet" href="/rlm_x1/static/src/less/custom1.less"/>
				<script type="text/javascript" src="/rlm_x1/static/src/js/custom1.js"/>
			</xpath>
		</template>
		<template inherit_id="portal.frontend_layout" name="rlm_x1 Custom Menu Left" id="rlm_x1_custom_menu_left">
			<xpath expr="//main" position="replace">
				<main>
					<div class="row">
						<t t-set="current_page" t-value="0"/>
						<t t-foreach="website.menu_id.child_id" t-as="cp">
							<t t-if="cp.clean_url() == request.httprequest.path">
								<t t-set="current_page" t-value="cp.name"/>
							</t>
						</t>
						<t t-if="current_page != 'Home'">
							<div class="col-md-2">
								<div id="left_menu_top" class="oe_structure col-md-12 mb16 mt16">
									<t t-set="category" t-value="0"/>
									<t t-foreach="website.menu_id.child_id" t-as="x">
										<t t-if="x.clean_url() == request.httprequest.path">
											<t t-set="category" t-value="x.name"/>
										</t>
										<t t-foreach="x.child_id" t-as="y">
											<t t-if="y.clean_url() == request.httprequest.path">
												<t t-set="category" t-value="y.parent_id.name"/>
											</t>
										</t>
									</t>
									<t t-if="category == 'Car Wash'">
										<h2>Car Wash Menu</h2>
										<ul>
											<li>CW1</li>
											<li>CW2</li>
											<li>CW3</li>
											<li>CW4</li>
										</ul>
									</t>
									<t t-if="category == 'Pressure Wash'">
										<h2>Pressure Wash Menu</h2>
										<ul>
											<li>pW1</li>
											<li>pW2</li>
											<li>pW3</li>
											<li>pW4</li>
										</ul>
									</t>
									<t t-if="category == 'Support'">
										<h2>Support Menu</h2>
										<ul>
											<li>SW1</li>
											<li>SW2</li>
											<li>SW3</li>
											<li>SW4</li>
										</ul>
									</t>
								</div>
								<div class="col-md-12 mb16 mt16">
									<h2>Top Categories</h2>
									<ul>
										<li>IN-BAY AUTOMATIC</li>
										<li>TUNNEL WASH</li>
										<li>SELF SERVE</li>
										<li>FLEET WASH</li>
										<li>MOBILE WASH</li>
										<li>CHEMICALS</li>
										<li>WATER TREATMENT</li>
										<li>METERBOXES</li>
										<li>POS SYSTEMS</li>
										<li>PAY STATIONS</li>
										<li>CHANGE MACHINES</li>
										<li>SIGNS &amp; CANOPIES</li>
										<li>BAY ACCESSORIES</li>
									</ul>
								</div>
								<div id="left_menu_bottom" class="oe_structure col-md-12 mb16 mt16"/>
							</div>
							<div class="col-md-10">
								<t t-raw="0"/>
							</div>
						</t>
						<t t-else="">
							<div class="col-md-12">
								<t t-raw="0"/>
							</div>
						</t>
					</div>
				</main>
			</xpath>
		</template>
	</data>
</odoo>
